{
    "version": "1.4.1.1030",
    "description": "Locate files and folders by name instantly.",
    "homepage": "https://www.voidtools.com/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://www.voidtools.com/Everything-1.4.1.1030.x64.zip",
            "hash": "c1a1bf4e2b87addb5ce662c3835cee8cfc2738396906b3544d589502d54a08be"
        },
        "32bit": {
            "url": "https://www.voidtools.com/Everything-1.4.1.1030.x86.zip",
            "hash": "c29380b7d87eff859808072555c8387528a8631b17ba0f9a0c66685704efba60"
        }
    },
    "pre_install": [
        "ensure \"$persist_dir\" | Out-Null",
        "if (!(Test-Path \"$persist_dir\\Everything.ini\")) { Invoke-ExternalCommand \"$dir\\Everything.exe\" -Args @('-install-config null') | Out-Null }",
        "Get-ChildItem \"$persist_dir\\*\" | ForEach-Object {",
        "    if (Test-Path $_.FullName) {",
        "        New-Item -Path (Join-Path $dir $_.Name) -Value $_.FullName -ItemType HardLink -Force",
        "    }",
        "}"
    ],
    "uninstaller": {
        "script": "Get-ChildItem \"$dir\\*\" -Include 'Everything.ini', 'Everything.db', 'Bookmarks.csv' | Copy-Item -Destination \"$persist_dir\" -ErrorAction SilentlyContinue -Force"
    },
    "bin": "Everything.exe",
    "checkver": "Download Everything ([\\d.]+)",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://www.voidtools.com/Everything-$version.x64.zip"
            },
            "32bit": {
                "url": "https://www.voidtools.com/Everything-$version.x86.zip"
            }
        },
        "hash": {
            "url": "$baseurl/Everything-$version.sha256"
        }
    },
    "_comment": "This manifest derives from https://github.com/lukesampson/scoop-extras"
}
